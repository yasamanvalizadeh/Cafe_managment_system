@model CafeSystemManagement.Entities.Item
@{
    ViewData["Title"] = "Delete Item"; 
}

<div class="pink-container">
    <main class="main-content position-relative border-radius-lg ps ps--active-y" style="height: auto;">
        
        <!-- Add User Form -->
        <div class="c-admin">
            <h2 class="f-title f-t-admin">
                Delete Item
            </h2>
            <p class="text-danger" style="font-size:16px;text-align:justify;">
                @ViewData["ConcurrencyErrorMessage"]
            </p>
             
            <h3 style="font-size:16px;text-align:center;margin-bottom:25px;" class="text-danger">Are you sure you want to delete this?</h3>
            <form autocomplete="off"
                  asp-action="Delete" 
                  method="post"
                  asp-route-so="@ViewData["CurrentSort"]"
                  asp-route-query="@ViewData["CurrentFilter"]"
                  asp-route-pageIndex="@ViewData["CurrentPageIndex"]"
                  asp-route-TenantId="@ViewData["CurrentTenantId"]">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                 @Html.HiddenFor(model => model.ItemId)
                 @Html.HiddenFor(model => model.RowVersion) 

                <label> Item Name</label>
                <div class="f-Input" style="margin-bottom:20px;padding-top:15px;"> 
                    @Html.DisplayFor(model => model.ItemName )
                </div>

                
                <label> Category Name</label>
                <div class="f-Input" style="margin-bottom:20px;padding-top:15px;">
                    @Html.DisplayFor(model => model.Category.CategoryName )
                </div>


                <label> Unit Price </label>
                <div class="f-Input" style="margin-bottom:20px;padding-top:15px;">
                    @Html.DisplayFor(model => model.UnitPrice )
                </div>

                <button type="submit" class="d-btn yes-btn"> Yes </button>

                <a asp-action="Index"
                   asp-route-so="@ViewData["CurrentSort"]"
                   asp-route-query="@ViewData["CurrentFilter"]"
                   asp-route-pageIndex="@ViewData["CurrentPageIndex"]">
                    <p class="d-btn no-btn" style="text-align:center;">
                        No
                    </p>
                </a>
            </form>
        </div>
    </main>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial">
    }
